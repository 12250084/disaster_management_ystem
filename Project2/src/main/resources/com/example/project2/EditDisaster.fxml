<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.Pane?>

<AnchorPane prefHeight="695.0" prefWidth="829.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.project2.EditDisasterController">

    <!-- Header Pane -->
    <Pane prefHeight="80.0" prefWidth="829.0" style="-fx-background-color: #2D75E8;">
        <children>
            <Label layoutX="20.0" layoutY="20.0" style="-fx-font-size: 24px; -fx-font-weight: bold;" text="Edit Assess Disaster" textFill="#FFFFFF" />
        </children>
    </Pane>

    <!-- Form Area -->
    <AnchorPane layoutX="20.0" layoutY="100.0" prefHeight="580.0" prefWidth="789.0">
        <children>
            <!-- Disaster No -->
            <Label layoutX="20.0" layoutY="20.0" text="Disaster No:" />
            <Label fx:id="disasterNo" layoutX="150.0" layoutY="15.0" prefWidth="100.0" />

            <!-- Disaster Type -->
            <Label layoutX="20.0" layoutY="60.0" text="Disaster Type:" />
            <ComboBox fx:id="disasterTypeComboBox" layoutX="150.0" layoutY="55.0" prefWidth="500.0" />

            <!-- Location -->
            <Label layoutX="20.0" layoutY="100.0" text="Location:" />
            <ComboBox fx:id="locationComboBox" layoutX="150.0" layoutY="95.0" prefWidth="500.0" promptText="-" />

            <!-- Description -->
            <Label layoutX="20.0" layoutY="140.0" text="Description:" />
            <TextArea fx:id="descriptionTextArea" layoutX="150.0" layoutY="135.0" prefHeight="200.0" prefWidth="630.0" promptText="-" />

            <!-- Priority and Department on the Same Line -->
            <!-- Priority -->
            <Label layoutX="20.0" layoutY="360.0" text="Priority:" />
            <ComboBox fx:id="priorityComboBox" layoutX="150.0" layoutY="355.0" prefWidth="100.0" />

            <!-- Department -->
            <Label layoutX="270.0" layoutY="360.0" text="Department:" />
            <ComboBox fx:id="departmentComboBox" layoutX="360.0" layoutY="355.0" prefWidth="200.0" />

            <!-- Save Button on the Next Line -->
            <Button fx:id="saveButton" layoutX="150.0" layoutY="416.0" onAction="#handleSave" prefWidth="120.0" text="Update" />
            <Button fx:id="deleteButton" layoutX="291.0" layoutY="416.0" onAction="#handleDelete" prefWidth="120.0" text="Delete" />
             <Button fx:id="cancelButton" layoutX="428.0" layoutY="416.0" onAction="#handleCancel" prefWidth="120.0" text="Cancel" />
        </children>
    </AnchorPane>

</AnchorPane>
